{
  "manifest_version": 2,
  "name": "Internet Usage Tracker",
  "version": "1.1.0",
  "description": "Track time spent on websites and sync to your personal dashboard",
  "author": "Your Name",
  
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "idle",
    "activeTab",
    "<all_urls>"
  ],
  
  "incognito": "spanning",
  
  "background": {
    "scripts": ["utils.js", "sync.js", "background.js"],
    "persistent": true
  },
  
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "Internet Usage Tracker",
    "default_popup": "popup/popup.html"
  },
  
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "internet-tracker@example.com",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["browsingActivity"],
        "optional": ["technicalAndInteraction"]
      }
    }
  }
}
